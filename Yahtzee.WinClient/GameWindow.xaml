<Window x:Class="Yahtzee.WinClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Yahtzee.WinClient"
        mc:Ignorable="d"
        Title="GameWindow" Height="430" Width="650" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="FlowDocumentScrollViewerDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.Resources>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:IntToImageConverter x:Key="IntToImageConverter"/>
            <local:DiceLockToVerticalAlignmentConverter x:Key="DiceLockToVerticalAlignmentConverter"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="5">
            <TextBlock Text="{Binding ActivePlayer}" FontSize="26" HorizontalAlignment="Center" Margin="10"/>
            <Button Margin="0 5 0 10" Width="100" Content="Roll Dice" Command="{Binding RollDiceCommand}"/>

            <!-- Roll results section-->
            <Border BorderBrush="Black" BorderThickness="1">
                <Grid Height="100" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="Result:"/>
                        <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="Keep:"/>
                    </Grid>
                    <TextBlock Grid.Column="1" Margin="0 6" HorizontalAlignment="Center" 
                               VerticalAlignment="{Binding Dice[0].IsUnlocked,Converter={StaticResource DiceLockToVerticalAlignmentConverter}}">
                        <Hyperlink Command="{Binding ToggleDiceLockCommand}" CommandParameter="0">
                            <Image Source="{Binding Dice[0].Result,Converter={StaticResource IntToImageConverter}}" Height="41" Width="41"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Column="2"  Margin="0 6" HorizontalAlignment="Center" 
                               VerticalAlignment="{Binding Dice[1].IsUnlocked,Converter={StaticResource DiceLockToVerticalAlignmentConverter}}">
                        <Hyperlink Command="{Binding ToggleDiceLockCommand}" CommandParameter="1">
                            <Image Source="{Binding Dice[1].Result,Converter={StaticResource IntToImageConverter}}" Height="41" Width="41"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Column="3"  Margin="0 6" HorizontalAlignment="Center" 
                               VerticalAlignment="{Binding Dice[2].IsUnlocked,Converter={StaticResource DiceLockToVerticalAlignmentConverter}}">
                        <Hyperlink Command="{Binding ToggleDiceLockCommand}" CommandParameter="2">
                            <Image Source="{Binding Dice[2].Result,Converter={StaticResource IntToImageConverter}}" Height="41" Width="41"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Column="4"  Margin="0 6" HorizontalAlignment="Center" 
                               VerticalAlignment="{Binding Dice[3].IsUnlocked,Converter={StaticResource DiceLockToVerticalAlignmentConverter}}">
                        <Hyperlink Command="{Binding ToggleDiceLockCommand}" CommandParameter="3">
                            <Image Source="{Binding Dice[3].Result,Converter={StaticResource IntToImageConverter}}" Height="41" Width="41"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Grid.Column="5"  Margin="0 6" HorizontalAlignment="Center" 
                               VerticalAlignment="{Binding Dice[4].IsUnlocked,Converter={StaticResource DiceLockToVerticalAlignmentConverter}}">
                        <Hyperlink Command="{Binding ToggleDiceLockCommand}" CommandParameter="4">
                            <Image Source="{Binding Dice[4].Result,Converter={StaticResource IntToImageConverter}}" Height="41" Width="41"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Border>
            <TextBlock Margin="0 10" Text="Select available category on the table to score."/>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <FlowDocumentScrollViewer Padding="0" IsSelectionEnabled="False">
                <FlowDocumentScrollViewer.VerticalScrollBarVisibility>
                    <ScrollBarVisibility>
                        0
                    </ScrollBarVisibility>
                </FlowDocumentScrollViewer.VerticalScrollBarVisibility>
                <FlowDocument>
                    <Table CellSpacing="0">
                        <Table.Columns>
                            <TableColumn Width="100"/>
                            <TableColumn/>
                            <TableColumn/>
                            <TableColumn/>
                            <TableColumn/>
                        </Table.Columns>

