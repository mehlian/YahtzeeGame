                                        <TextBlock Text="{Binding Players[0]}"/>
                                    </Paragraph>
                                </TableCell>
                                <TableCell Background="LightGoldenrodYellow" TextAlignment="Center">
                                    <Paragraph>
                                        <TextBlock Text="{Binding Players[1]}"/>
                                    </Paragraph>
                                </TableCell>
                                <TableCell Background="LightGoldenrodYellow" TextAlignment="Center">
                                    <Paragraph>
                                        <TextBlock Text="{Binding Players[2]}"/>
                                    </Paragraph>
                                </TableCell>
                                <TableCell Background="LightGoldenrodYellow" TextAlignment="Center">
                                    <Paragraph>
                                        <TextBlock Text="{Binding Players[3]}"/>
                                    </Paragraph>
                                </TableCell>
                            </TableRow>

                            <!-- Data - Main Category -->
