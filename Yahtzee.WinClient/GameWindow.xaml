                                </TableCell>
                                <TableCell TextAlignment="Center" BorderBrush="Black" BorderThickness="0,1,0,0">
                                    <Paragraph>
                                        <TextBlock Text="0"/>
                                    </Paragraph>
                                </TableCell>
                            </TableRow>
                        </TableRowGroup>
                    </Table>
                </FlowDocument>
            </FlowDocumentScrollViewer>
            <Button HorizontalAlignment="Right" Margin="20" Width="100" Content="Quit Game" Command=""/>

        </StackPanel>
    </Grid>
</Window>
